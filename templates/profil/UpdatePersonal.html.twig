{% extends 'template.html.twig' %}

{% block title %}{% endblock %}

{% block stylesheets %} 
	<!--DateTimePicker-->
	<link rel="stylesheet" type="text/css" href="https://ajax.aspnetcdn.com/ajax/jquery.ui/1.10.4/themes/south-street/jquery-ui.css">
	  <link rel="stylesheet" type="text/css" href="{{asset('css/style3.css')}}">

{% endblock %}

{% block part %}

	<!-- profil -->

					 <!-- Message Errors-->	
						{{include('profil/ScriptMsg.html.twig')}}



						<!-- Update personal data --> 

		         <div class="col-md-12 offset-0">
		            		            	
			        <div class="panel panel-default">
								
						<div class="panel-body" style="padding : 30px 30px 30px 30px;">				
								 {{form_start(form)}}
		          				<div class="row">			         
		          					<div class="col-sm-10">	            
										<!-- First name -->
										<div class="form-group has-feedback">
											<div class="input-group">
												<span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
												
												{{ form_widget(form.nom, {'attr':{'class':'form-control','placeholder':'Nom'}})}}
			    							</div>
			    							<span class="glyphicon form-control-feedback" aria-hidden="true"></span>
										</div>
									
										
										<!-- Last name -->
										<div class="form-group has-feedback">
											<div class="input-group">
												<span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
												
												{{ form_widget(form.prenom, {'attr':{'class':'form-control','placeholder':'Nom'}})}}
			    							</div>
			    							<span class="glyphicon form-control-feedback" aria-hidden="true"></span>
										</div>
									
										
										<!-- Birthdate -->
										<div class="form-group has-feedback">
											<div class="input-group">
												<span class="input-group-addon"><i class="fa fa-calendar"></i></span>
												

												{{ form_widget(form.date_naissance,{'attr':{'placeholder':'Année de naissance'}})}}
												
			    							</div>
			    							<span class="glyphicon form-control-feedback" aria-hidden="true"></span>
			    							
										</div>
									</div>	

									<div class="col-sm-2">	
											<div class="card-image">
												<div class="card-image">
												{% if img == null  %}
													
													<img class="imge" src="{{asset('images/search/imgprofil.png')}}">
												{% else %}	
				                                 <img class="imge" src="{{asset('uploads/') ~ img}}">
				                                {% endif %} 

				                            </div> 

				                            </div>   
									</div>
								</div>		
										<!-- Email -->
										
											<div class="form-group has-feedback">
												<div class="input-group">
													<span class="input-group-addon">@</span>
													{{ form_widget(form.email,{'attr':{'class':'form-control','placeholder':'Email'}})}}
				    							</div>
				    							<span class="glyphicon form-control-feedback" aria-hidden="true"></span>
											</div>
									  
										
						
										<!-- Phone -->
										<div class="form-group has-feedback">
											<div class="input-group">
												<span class="input-group-addon"><i class="glyphicon glyphicon-phone"></i></span>
												<span class="input-group-addon">+216(0)</span>
												{{ form_widget(form.telephone,{'attr':{'class':'form-control','placeholder':'Téléphone'}})}}
			    							</div>
			    							<span class="glyphicon form-control-feedback" aria-hidden="true"></span>
										</div>
									

										<!-- sexe -->
										<div class="form-group has-feedback">
											<div class="input-group">
												<span class="input-group-addon"><i class="fa fa-male"></i></span>
												{{ form_widget(form.sexe,{'attr':{'class':'form-control','placeholder':'Téléphone'}})}}
			    							</div>
			    							<span class="glyphicon form-control-feedback" aria-hidden="true"></span>
										</div>

										<!-- Fonction -->
										<div class="form-group has-feedback">
											<div class="input-group">
												<span class="input-group-addon"><i class="fas fa-briefcase"></i></span>
												{{ form_widget(form.fonction,{'attr':{'class':'form-control','placeholder':'Fonction'}})}}
			    							</div>
			    							<span class="glyphicon form-control-feedback" aria-hidden="true"></span>
										</div>

									    {{ form_row(form.imageFile)}}


											
						</div>

									
									
									<!-- Button -->	
											<div class="panel-footer text-center">
												<input id="submitForm" type="submit" value="Editer" class="btn btn-success"></input>
											</div>
									{{ form_widget(form._token) }} <!-- render the CSRF Token-->
									{{ form_end(form,{'render_rest': false})}}
								
					<div>
							
				</div>
					
						

	<!-- /profil -->


{% endblock %}


{% block javascripts %}


	        <!--DateTimePicker-->
	        <script src="{{asset('js/vendors/jquery-3.4.1.min.js')}}"></script>
    		<script src="{{asset('js/vendors/jquery-ui.min.js')}}"></script>
            <script src="{{asset('js/calendar/birthday.js')}}"></script>


   		 <!-- /DateTimePicker-->

{% endblock %}	