<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        
        {% block stylesheets %}
        {% endblock %}
           <link rel="stylesheet" type="text/css" href="{{asset('css/vendors/bootstrap.css')}}">
           <link rel="stylesheet" type="text/css" href="{{asset('css/vendors/font-awesome.min.css')}}">
           <link rel="stylesheet" type="text/css" href="{{asset('css/style1.css')}}">
           <script src="{{asset('js/vendors/jquery-1.7.1.js.téléchargement')}}"></script>
           <script src="{{asset('js/vendors/scripts.js.téléchargement')}}"></script>

           <link rel="stylesheet" href="{{asset('css/layout.min.css')}}">
           <!-- Script for fontawesome 4.7 or 5 -->
           <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css" rel="stylesheet"/>
           <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet"/>
    </head>
    <body>
      
      <!--  **************************** Menu ************************* -->

<div class="header-container container-fluid">
  <div class="row-fluid-wrapper row-number-1 ">
   <div class="row-fluid ">
         <div class="row-fluid-wrapper row-number-1 ">
           <div class="row-fluid ">
              <div class="row-fluid-wrapper">
                <div class="row-fluid">
                    <div class="span3 top-logo">
                      <div class="cell-wrapper layout-widget-wrapper">
                        <span  class="hs_cos_wrapper">
                          <a href="#">
                            <a href="{{path('acceuil')}}" style="color:rgba(103,76,167,1);text-decoration: none;"><h2>EasyWork</h2></a>
                          </a>
                        </span>
                      </div><!--end layout-widget-wrapper -->
                    </div><!--end widget-span -->
                    <div class="span9">
                      <div class="row-fluid-wrapper">
                        <div class="row-fluid">
                          <div class="span12 top-menu" >
                                <div  class="hs-menu-wrapper hs-menu-flow-horizontal">
                                 <ul> 
                                    <li class="hs-menu-item hs-menu-depth-1"><a href="#">A propos</a></li>
                                    <li class="hs-menu-item hs-menu-depth-1"><a href="#">Comment ça marche</a></li>
                                    <li class="hs-menu-item hs-menu-depth-1"><a data-toggle="modal" href="#loginModal">Se connecter</a></li>
                                    <li class="hs-menu-item hs-menu-depth-1" style="text-decoration: none"><a href="{{path('security_registration')}}">S'inscrire</a></li>
                                 </ul>
                                </div>
                          </div><!--end widget-span -->
                        </div><!--end row-->
                      </div><!--end row-wrapper -->
                    </div><!--end widget-span -->
                </div><!--end row-->
              </div><!--end row-wrapper -->
          </div><!--end row-->
        </div><!--end row-wrapper -->
  </div><!--end row-->
 </div><!--end row-wrapper -->
</div><!--end header -->

<!--  Form Login-->

               <div class="modal fade"  id="loginModal">
                  
                  <div class="modal-dialog">
                    <div class="modal-content">

                      <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h2 class="modal-titre"><span>Connexion</span> à votre compte</h2>
                        
                      
                      </div>
                  

                    <form action="{{path('security_login')}}" method="post">
                      
                      <div class="modal-body">
                          <div class="inscrit text-right">
                            <a href="{{path('security_registration')}}" >Pas encore inscrit ?</a>
                          </div>
                        <div class="form-group">
                          <input type="text" name="_username" required class="form-control" placeholder="Email">
                        </div>
                          <div class="mdp text-right">
                            <a href="#">Mot de passe oublié ?</a>
                          </div>
                        <div class="form-group">
                         <input type="password" name="_password" required class="form-control" placeholder="Votre mot de passe">
                        </div>
                      </div>

                      <div class="modal-footer">
                        <button type="submit" class="btn btn-success">Connexion</button>
                      </div>
                    </form>

                    </div>
                  </div>
                </div>
           <!-- /Form Login-->


      <!-- ************************* / Menu **************************************-->
           
          <!-- Script General-->
                <script src="{{asset('js/vendors/jquery-3.4.1.min.js')}}"></script>
                <script src="{{asset('js/vendors/bootstrap.js')}}"></script>

        
        {% block body %}{% endblock %}



        {% block javascripts %}{% endblock %}
    </body>
</html>
